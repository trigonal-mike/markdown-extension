{
	"name": "markdown-extension",
	"displayName": "markdown-extension",
	"description": "",
	"version": "0.0.1",
	"publisher": "TU Graz",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"markdown.markdownItPlugins": true,
		"configuration": {
			"title": "Multi Markdown",
      "properties": {
        "qqq": {
          "type": "string",
          "default": "qqq",
          "description": "qqq"
        },
        "mmd.zzz": {
          "type": "boolean",
          "default": false,
          "description": "zzz"
        },
        "mmd.yyy": {
          "type": "boolean",
          "default": false,
          "description": "yyy"
        },
        "mmd.xxx": {
          "type": "string",
          "default": "null",
					"editPresentation": "multilineText",
          "description": "xxx"
        },
				"mmd.pageItemLimit": {
					"type": "number",
					"default": 20,
					"markdownDescription": "Specifies the number of items to show in each page when paginating a view list. Use 0 to specify no limit"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/markdown-it": "^12.0.0",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@types/markdown-it-container": "^2.0.3",
		"markdown-it": "^12.0.4",
		"markdown-it-container": "^3.0.0"
	}
}
