{
	"name": "markdown-extension",
	"displayName": "markdown-extension",
	"description": "",
	"version": "0.0.1",
	"publisher": "TU Graz",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [{
			"id": "markdown",
			"aliases": ["mmd"],
			"extensions": [".mmd"]
		}],
		"markdown.markdownItPlugins": true,
		"configuration": {
			"title": "Multi Markdown",
      "properties": {
        "mmd.withEmoji": {
          "type": "boolean",
          "default": true,
          "description": "Render Markdown with Emoji Support"
        },
        "mmd.array": {
					"type": "array",
					"items": {
							"type": "object",
							"title": "inner objects",
							"properties": {
									"name": {
											"type": "string",
											"description": "Name of inner object"
									},
									"size": {
											"type": "number",
											"description": "Size of inner object"
									}
							}
					},
					"default": [],
					"description": "my test configurations"
				},
        "mmd.qqq": {
          "type": "string",
          "default": "qqq",
          "description": "qqq"
        },
        "mmd.xxx": {
          "type": "string",
          "default": "null",
					"editPresentation": "multilineText",
          "description": "xxx"
        },
				"mmd.pageItemLimit": {
					"type": "number",
					"default": 20,
					"markdownDescription": "Specifies the number of items to show in each page when paginating a view list. Use 0 to specify no limit"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vsce:package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/markdown-it": "^12.0.0",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@types/markdown-it-container": "^2.0.3",
		"markdown-it": "^12.0.4",
		"markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-textual-uml": "^0.11.0",
    "markdown-it-multimd-table": "^4.1.3",
		"markdown-it-katex": "^2.0.3"
	},
	"repository": {
		"url": "https://github.com/trigonal-mike/markdown-extension"
	}
}
